{% extends '::base.html.twig' %}

{% block body %}
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <h3>
            {{ 'title'|trans }}
            {% if app.user.fullName is not null %}
                {{ app.user.fullName }}!
            {% else %}
                {{ app.user.username }}!
            {% endif %}
        </h3>
        <h4>{{ 'text2'|trans }}</h4>
        <a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
    {% else %}
        <h3>{{ 'title'|trans }}!</h3>
        <h4>{{ 'text1'|trans }}</h4>
        <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
        <a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a><br><br>
        <a href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}">{{ 'facebook.link'|trans }}</a>
    {% endif %}
{% endblock %}
